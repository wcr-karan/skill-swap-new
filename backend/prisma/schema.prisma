generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  bio      String?

  skills   Skill[]

  sentRequests     SwapRequest[] @relation("SentRequests")
  receivedRequests SwapRequest[] @relation("ReceivedRequests")
}


model Skill {
  id      Int    @id @default(autoincrement())
  name    String
  type    String

  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}


model SwapRequest {
  id            Int      @id @default(autoincrement())

  fromUser      User     @relation("SentRequests", fields: [fromUserId], references: [id])
  fromUserId    Int

  toUser        User     @relation("ReceivedRequests", fields: [toUserId], references: [id])
  toUserId      Int

  skillOffered  String
  skillWanted   String

  status        String   @default("pending")

  createdAt     DateTime @default(now())
}
