generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  bio      String?

  skills   Skill[]   // ðŸ‘ˆ add this line
}

model Skill {
  id      Int    @id @default(autoincrement())
  name    String
  type    String   // "teach" or "learn"

  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}
